{
  "name": "ashikubuntu/commercio-api",
  "description": "A modern PHP REST API for e-commerce with products and posts management",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "php",
    "api",
    "rest",
    "ecommerce",
    "mvc",
    "commercio"
  ],
  "authors": [
    {
      "name": "Ashik Rahman",
      "email": "ashikrn.hq04@gmail.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://mockerjson.xyz",
  "support": {
    "issues": "https://github.com/ashikrnhq04/commercio/issues",
    "source": "https://github.com/ashikrnhq04/commercio"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "pestphp/pest": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "Core\\": "app/Core/",
      "Http\\Controllers\\": "app/Http/Controllers/",
      "Models\\": "app/Models/",
      "Schema\\": "app/Schema/",
      "Views\\": "app/Views/"
    },
    "files": [
      "app/helpers/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@php ./vendor/bin/pest tests/Feature/ExampleTest.php tests/Unit/ExampleTest.php --colors=never"
    ],
    "test-all": "./vendor/bin/pest tests/",
    "test-coverage": "./vendor/bin/pest --coverage",
    "serve": "php -S localhost:8000 -t public",
    "post-autoload-dump": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "scripts-descriptions": {
    "test": "Run the test suite",
    "test-coverage": "Run tests with coverage report",
    "serve": "Start the development server"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
